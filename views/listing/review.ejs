
<div>
  <div class="addComment">
    <form method="POST" action="/listings/<%= listing._id %>/review">
      <div class="mb-3 mt-2" >
        <label for="rating" class="form-label">Rating</label>
        <input type="range" min="1" max="5" id="rating" name="review[rating]"/>
      </div>
      <div class="input-group">
        <div class="form-floating">
          <textarea class="form-control" name="review[comment]" placeholder="Leave a comment here" id="comment" style="height: 100px"></textarea>
          <label for="comment">Comments</label>
        </div>
      </div><br/>
      <button type="submit" class="btn btn-dark">Add</button>
    </form>
  </div>
  
  <% if(listing.reviews && listing.reviews.length > 0){ %>
  <h3 style="color: red; font-family: 'Segoe UI', Arial, sans-serif; font-weight: bold; text-decoration: underline;">Reviews :</h3>
    <div class="row row-cols-2 row-cols-md-2">
    <% for( let review of listing.reviews ) { %>
      <div class="col">
        <div class="card mb-3 ms-3">
          <div class="card-header" style="height: 50px;">
            By Ramesh
            <span style="float: right;" class="rating">
              <% for(i=0 ; i<review.rating ; i++){ %>
                <span style="color: gold; font-size: 30px;">&#9733;</span>
              <% } %>
            </span>
          </div>
          <div class="card-body">
            <figure>
              <blockquote class="blockquote">
                <p style="font-size: medium;"><%= review.comment %></p>
              </blockquote>
              
            </figure>
            <form method="POST" action="/listings/<%= listing._id %>/review/<%= review._id %>?method=DELETE">
              <button class="btn btn-outline-danger" type="submit">Delete</button>
            </form>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  <% } %>
</div>