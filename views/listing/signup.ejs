<% layout('layouts/boilerplate') %>

<div class="container mt-4">
  <div class="text-center mb-3">
    <img src="/logo.png" alt="Logo" class="logo" style="scale: 1.1;" />
  </div>
  <h2 class="text-center fw-bold mb-4" style="color: #ff4d00;">
    Welcome to Manama!
  </h2>
	<h3>Create your account</h3>

	<div class="row mt-3">
		<div class="col-md-8 col-lg-6">
			<form method="POST" action="/signup">
				<div class="form-floating mb-3">
					<input name="username" type="text" class="form-control" id="username" placeholder="johndoe" required>
					<label for="username">Username</label>
				</div>

				<div class="form-floating mb-3">
					<input name="email" type="email" class="form-control" id="email" placeholder="name@example.com" required>
					<label for="email">Email</label>
				</div>

				<div class="form-floating mb-3">
					<input name="password" type="password" class="form-control" id="password" placeholder="••••••••" required>
					<label for="password">Password</label>
				</div>

				<button type="submit" class="btn btn-primary">Sign up</button>
			</form>
      <br/><br/>
      <p style="text-align: center;">Already have an account? 
        <a href="/login" class="btn btn-sm btn-outline-success">Login</a>
      </p>
		</div>
	</div>
</div>

